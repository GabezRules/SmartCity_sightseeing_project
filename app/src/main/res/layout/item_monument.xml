<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/monumentContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <ImageView
            android:id="@+id/monumentImage"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/monumentProgressBar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="@id/monumentImage"
            app:layout_constraintLeft_toLeftOf="@id/monumentImage"
            app:layout_constraintRight_toRightOf="@id/monumentImage"
            app:layout_constraintTop_toTopOf="@id/monumentImage" />

        <TextView
            android:id="@+id/monumentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="Monument name"
            android:textSize="24sp"
            app:layout_constraintLeft_toRightOf="@id/monumentImage"
            app:layout_constraintTop_toTopOf="@id/monumentImage" />

        <TextView
            android:id="@+id/monumentShortDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/monumentName"
            app:layout_constraintTop_toBottomOf="@id/monumentName" />

        <LinearLayout
            android:id="@+id/monumentSeenContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/monumentShortDesc">

            <ImageView
                android:id="@+id/monumentSeenIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_seen_outlined" />

            <TextView
                android:id="@+id/monumentSeenCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1234" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/monumentFavContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintRight_toLeftOf="@id/monumentSeenContainer"
            app:layout_constraintTop_toTopOf="@id/monumentSeenContainer">

            <ImageView
                android:id="@+id/monumentFavIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="8dp"
                android:src="@drawable/ic_fav_outlined" />

            <TextView
                android:id="@+id/monumentFavCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="1234" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>